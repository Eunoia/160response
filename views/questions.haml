- if(@questions.length==0)
	.row
		.span4.offset2.hero-unit
			%p
				Text your questions to 
				%b (212) 323 - 2343
-else
	%h3
		Questions (
		= @questions.length
		)
	%ol.questions
		- @questions.each do |question|
			%li.well
				%div
					%b
						%a{:href=>"http://workersandbox.mturk.com/mturk/preview?groupId=#{question.hittypeid}"}
							=question.questionText
				- unless(question.response.nil?)
					%div.response
						%em
							=question.response
						%i
							="#{((question.timeFinished - question.timeRecived)/60).round} mins"

- if login?
	.row
		.span2.pull-right
			%a{ :href=> '/logout' } Log out